@model List<EdithTour.Models.Customer>

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="container-fluid">

    <div class="parallax-login">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new {@class="form"}))
        {

            @Html.AntiForgeryToken()
            <p class="title">Login </p>
            <p class="message">Signup now and get full access to our app. </p>
            <label>
                <input required placeholder="" type="text" class="input" name="username">
                <span>Username</span>
            </label>

            <label>
                <input required placeholder="" type="password" class="input" name="password">
                <span>Password</span>
            </label>
            <br>
            <input class="submit mt-2" type="submit" value="Login" name="submit">
            <p class="signin mt-2"> <a href="#register.html">Already have an acount ?</a> <a href="#">Signin</a> </p>
        }

    </div>
</div>

